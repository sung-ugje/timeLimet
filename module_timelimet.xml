<?xml version="1.0" encoding="UTF-8"?>
<project name="module_timelimet" default="compile.module.timelimet">
  <dirname property="module.timelimet.basedir" file="${ant.file.module_timelimet}"/>
  
  <property name="module.jdk.home.timelimet" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.timelimet" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.timelimet" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.timelimet" value="-encoding UTF-8 -source 1.7 -target 1.7 ${compiler.args}"/>
  
  <property name="timelimet.output.dir" value="${module.timelimet.basedir}/out/production/timeLimet"/>
  <property name="timelimet.testoutput.dir" value="${module.timelimet.basedir}/out/test/timeLimet"/>
  
  <path id="timelimet.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="timelimet.module.production.classpath">
    <path refid="${module.jdk.classpath.timelimet}"/>
    <path refid="library.kotlinjavaruntime.classpath"/>
  </path>
  
  <path id="timelimet.runtime.production.module.classpath">
    <pathelement location="${timelimet.output.dir}"/>
    <path refid="library.kotlinjavaruntime.classpath"/>
  </path>
  
  <path id="timelimet.module.classpath">
    <path refid="${module.jdk.classpath.timelimet}"/>
    <pathelement location="${timelimet.output.dir}"/>
    <path refid="library.kotlinjavaruntime.classpath"/>
  </path>
  
  <path id="timelimet.runtime.module.classpath">
    <pathelement location="${timelimet.testoutput.dir}"/>
    <pathelement location="${timelimet.output.dir}"/>

  </path>
  
  
  <patternset id="excluded.from.module.timelimet">

  </patternset>
  
  <patternset id="excluded.from.compilation.timelimet">
    <patternset refid="excluded.from.module.timelimet"/>
  </patternset>
  
  <path id="timelimet.module.sourcepath">
    <dirset dir="${module.timelimet.basedir}">
      <include name="src"/>
    </dirset>
  </path>

  <target name="clean.module.timelimet" description="cleanup module">
    <delete dir="${timelimet.output.dir}"/>
    <delete dir="${timelimet.testoutput.dir}"/>
  </target>
</project>